/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.picker {
    padding: 10px;
}

.bazi-container {
    margin-top: 10px;
    display: flex;
    flex-direction: column;
}

.row {
    display: flex;
    width: 100%;
    padding: 5px 0;
}

.title .column{
    font-size: 16px;
}
.column.gan, .column.zhi {
    font-size: 20px;
}

.row:nth-child(odd) {
    background-color: #F5F5F5;
}
.column {
    flex: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    font-size: 14px;  
}

.shishen {
    font-size: 12px;
}

.green {
    color: green;
}

.red {
    color: red;
}

.gold {
    color: rgb(255, 174, 0);
}

.brown {
    color: rgb(165, 112, 42);
}

.blue {
    color: rgb(0, 102, 255);
}
